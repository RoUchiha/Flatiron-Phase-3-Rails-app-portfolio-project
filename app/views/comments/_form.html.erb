<%= form_for([@show, @comment], :url => show_comments_path(@show), method: :post) do |f| %>
    <%= f.hidden_field :show_id %>
    <%= f.hidden_field :user_id, value: current_user %>

    <%= f.label :content, "Leave a review/comment that other users can see!" %>
    <br>
    <%= f.text_area :content %>
    <br>
    <%= f.submit "Submit Comment/Review" %>
<% end %>